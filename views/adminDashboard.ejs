
<nav class="navbar navbar-expand-lg bg-dark text-light py-3 fixed-top">
    <div class="container">
        <h1><i class="fa-regular fa-folder-open"></i>File server</h1>
        <p class="mt-4"><i class="fa-solid fa-user-pen"></i> <%= name.charAt(0).toUpperCase() + name.slice(1) %></p>
        <a href="/logout" class="btn btn-secondary">Logout</a>
    </div>
</nav>

<section class="bg-light text-primary p-5">
    <div class="container">
        <div class="d-md-flex align-items-center">
            <h3 class="mb-3 mb-md-0">Click to upload files</h3>
            <div class="input-group ">
                <h1 class="mr-5 ml-5"><i class="fa-solid fa-angles-right"></i></h1>
                <button class="form-control btn-info mr-1"><a href="#" style="text-decoration: none;" class="text-light">Upload</a></button>
            </div>
        </div>
    </div>
</section>
        
  <% if(success_msg != '') { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= success_msg %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% } %>


<!-- Render Files-->
<section class="p-5">
    <div class="container">
        <div class="row text-center">
          <% if (files.length) { %> <% for(let file of files) { %>  
          <div class="col-sm-6 col-md-4">
            <div class="card mb-3 bg-info text-light" style="max-width: 540px;">
                <div class="row g-0">
                  <div class="col-md-4">
                      <img src="uploads/<%= file.image %>" class="img-fluid rounded-start" alt="...">
                  </div>
                    <div class="col-md-8">
                      <div class="card-body">
                        <h5 class="card-title"><%= file.title %></h5>
                        <p class="card-text"><%= file.description %></p>
                        <div class="input-group ">
                          <input type="text" class="form-control btn-success mr-1" value="Download">
                          <input type="text" class="form-control btn-primary" value="Send">
                        </div>
                      </div>
                    </div>
                </div>
            </div>
          </div>
          <% } %>
          <% } else { %>
          <div>No Files Available</div>
          <% } %>
        </div>
    </div>
</section>
